{
  "compilerOptions": {
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["tests/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}